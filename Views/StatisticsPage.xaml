<Page x:Class="ForgeMacro.Views.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Statistics"
      Background="{StaticResource SecondaryBrush}"
      Foreground="{StaticResource TextPrimaryBrush}">
    
    <ScrollViewer Background="{StaticResource SecondaryBrush}">
        <Grid Padding="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Session Stats -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                    CornerRadius="12" Padding="20" Margin="0,0,0,20">
                <StackPanel Spacing="15">
                    <TextBlock Text="ðŸ“ˆ Session Statistics" FontSize="14" FontWeight="Bold" />
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Grid.Row="0" Spacing="5" Margin="0,0,20,15">
                            <TextBlock Text="Total Ores Mined" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="1,234" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="0" Spacing="5" Margin="0,0,0,15">
                            <TextBlock Text="Avg Ores/Hour" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="308" FontSize="24" FontWeight="Bold" Foreground="{StaticResource SuccessColor}" />
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="1" Spacing="5" Margin="0,0,20,15">
                            <TextBlock Text="Rocks Detected" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="567" FontSize="24" FontWeight="Bold" Foreground="{StaticResource WarningColor}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1" Spacing="5" Margin="0,0,0,15">
                            <TextBlock Text="Detection Accuracy" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="94.2%" FontSize="24" FontWeight="Bold" Foreground="{StaticResource SuccessColor}" />
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="2" Spacing="5">
                            <TextBlock Text="Session Duration" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="4h 2m 15s" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DangerColor}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="2" Spacing="5">
                            <TextBlock Text="Avg Detection Time" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" />
                            <TextBlock Text="45ms" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Ore Breakdown -->
            <Border Grid.Row="1" Background="{StaticResource PrimaryBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                    CornerRadius="12" Padding="20" Margin="0,0,0,20">
                <StackPanel Spacing="15">
                    <TextBlock Text="â›ï¸ Ore Breakdown" FontSize="14" FontWeight="Bold" />
                    
                    <ListBox Background="Transparent" BorderThickness="0" 
                             Foreground="{StaticResource TextPrimaryBrush}">
                        <ListBoxItem Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                            <Grid Width="300">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="80" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Iron Ore" FontWeight="Bold" />
                                <ProgressBar Grid.Column="1" Value="65" Maximum="100" Height="8" Margin="10,0" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="2" Text="456 (37%)" TextAlignment="Right" />
                            </Grid>
                        </ListBoxItem>
                        <ListBoxItem Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                            <Grid Width="300">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="80" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Gold Ore" FontWeight="Bold" />
                                <ProgressBar Grid.Column="1" Value="45" Maximum="100" Height="8" Margin="10,0" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="2" Text="312 (25%)" TextAlignment="Right" />
                            </Grid>
                        </ListBoxItem>
                        <ListBoxItem Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                            <Grid Width="300">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="80" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Diamond Ore" FontWeight="Bold" />
                                <ProgressBar Grid.Column="1" Value="35" Maximum="100" Height="8" Margin="10,0" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="2" Text="241 (20%)" TextAlignment="Right" />
                            </Grid>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <Border Grid.Row="2" Background="{StaticResource PrimaryBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                    CornerRadius="12" Padding="20">
                <StackPanel Spacing="10">
                    <TextBlock Text="ðŸ“Š Actions" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Content="ðŸ“¥ Export CSV" Style="{StaticResource PrimaryButtonStyle}" />
                        <Button Content="ðŸ“Š Export JSON" Style="{StaticResource PrimaryButtonStyle}" />
                        <Button Content="ðŸ”„ Reset Stats" Style="{StaticResource PrimaryButtonStyle}" Background="{StaticResource DangerColor}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
