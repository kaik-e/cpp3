<Page x:Class="ForgeMacro.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dashboard"
      Background="{StaticResource SecondaryBrush}"
      Foreground="{StaticResource TextPrimaryBrush}">
    
    <ScrollViewer Background="{StaticResource SecondaryBrush}">
        <Grid Padding="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Stats Cards -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Ores Mined Card -->
                <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                        CornerRadius="12" Padding="20" Margin="0,0,15,0">
                    <StackPanel>
                        <TextBlock Text="â›ï¸ Ores Mined" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" />
                        <TextBlock x:Name="OresMined" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Margin="0,10,0,0" />
                        <TextBlock Text="Total detected" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0" />
                    </StackPanel>
                </Border>

                <!-- Rocks Detected Card -->
                <Border Grid.Column="1" Background="{StaticResource PrimaryBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                        CornerRadius="12" Padding="20" Margin="15,0">
                    <StackPanel>
                        <TextBlock Text="ðŸª¨ Rocks Detected" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" />
                        <TextBlock x:Name="RocksDetected" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource SuccessColor}" Margin="0,10,0,0" />
                        <TextBlock Text="Mining spots" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0" />
                    </StackPanel>
                </Border>

                <!-- Runtime Card -->
                <Border Grid.Column="2" Background="{StaticResource PrimaryBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                        CornerRadius="12" Padding="20" Margin="15,0">
                    <StackPanel>
                        <TextBlock Text="â±ï¸ Runtime" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" />
                        <TextBlock x:Name="RuntimeText" Text="00:00:00" FontSize="32" FontWeight="Bold" Foreground="{StaticResource WarningColor}" Margin="0,10,0,0" />
                        <TextBlock Text="Hours:Minutes:Seconds" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0" />
                    </StackPanel>
                </Border>

                <!-- Avg Detection Time Card -->
                <Border Grid.Column="3" Background="{StaticResource PrimaryBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                        CornerRadius="12" Padding="20" Margin="15,0,0,0">
                    <StackPanel>
                        <TextBlock Text="âš¡ Avg Detection" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" />
                        <TextBlock x:Name="AvgDetectionTime" Text="0ms" FontSize="32" FontWeight="Bold" Foreground="{StaticResource DangerColor}" Margin="0,10,0,0" />
                        <TextBlock Text="Per frame" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Activity Log -->
            <Border Grid.Row="1" Background="{StaticResource PrimaryBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                    CornerRadius="12" Padding="20" Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="ðŸ“‹ Recent Activity" FontSize="14" FontWeight="Bold" Margin="0,0,0,15" />
                    
                    <ListBox x:Name="ActivityLog" Background="Transparent" BorderThickness="0" 
                             Foreground="{StaticResource TextPrimaryBrush}">
                        <ListBoxItem Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                            <TextBlock Text="Ready to start mining..." />
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Quick Actions -->
            <Border Grid.Row="2" Background="{StaticResource PrimaryBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                    CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="âš™ï¸ Quick Actions" FontSize="14" FontWeight="Bold" Margin="0,0,0,15" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Content="ðŸ“¸ Capture Screenshot" Style="{StaticResource PrimaryButtonStyle}" />
                        <Button Content="ðŸ”„ Reload Model" Style="{StaticResource PrimaryButtonStyle}" />
                        <Button Content="ðŸ“Š Export Stats" Style="{StaticResource PrimaryButtonStyle}" />
                        <Button Content="ðŸ”§ Advanced Settings" Style="{StaticResource PrimaryButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
