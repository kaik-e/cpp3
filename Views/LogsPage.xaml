<Page x:Class="ForgeMacro.Views.LogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Logs"
      Background="{StaticResource SecondaryBrush}"
      Foreground="{StaticResource TextPrimaryBrush}">
    
    <Grid Background="{StaticResource SecondaryBrush}" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Controls -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                CornerRadius="12" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="ðŸ“ Application Logs" FontSize="14" FontWeight="Bold" />
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Filter:" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" />
                    <ComboBox Background="{StaticResource SecondaryBrush}" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              BorderBrush="{StaticResource BorderBrush}"
                              Width="150">
                        <ComboBoxItem>All</ComboBoxItem>
                        <ComboBoxItem>Information</ComboBoxItem>
                        <ComboBoxItem>Warning</ComboBoxItem>
                        <ComboBoxItem>Error</ComboBoxItem>
                    </ComboBox>
                    
                    <Button Content="ðŸ—‘ï¸ Clear Logs" Style="{StaticResource PrimaryButtonStyle}" />
                    <Button Content="ðŸ’¾ Export Logs" Style="{StaticResource PrimaryButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Log Entries -->
        <Border Grid.Row="1" Background="{StaticResource PrimaryBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                CornerRadius="12" Padding="20">
            <ListBox x:Name="LogList" Background="Transparent" BorderThickness="0" 
                     Foreground="{StaticResource TextPrimaryBrush}">
                <ListBoxItem Foreground="{StaticResource SuccessColor}" FontSize="11" FontFamily="Consolas">
                    <TextBlock Text="[2024-12-11 19:45:23] INFO: ForgeMacro started" />
                </ListBoxItem>
                <ListBoxItem Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" FontFamily="Consolas">
                    <TextBlock Text="[2024-12-11 19:45:24] INFO: OCR engine initialized" />
                </ListBoxItem>
                <ListBoxItem Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" FontFamily="Consolas">
                    <TextBlock Text="[2024-12-11 19:45:25] INFO: Object detection model loaded: models/yolo_ore_detector.onnx" />
                </ListBoxItem>
                <ListBoxItem Foreground="{StaticResource WarningColor}" FontSize="11" FontFamily="Consolas">
                    <TextBlock Text="[2024-12-11 19:45:26] WARNING: Game window capture not yet implemented" />
                </ListBoxItem>
                <ListBoxItem Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" FontFamily="Consolas">
                    <TextBlock Text="[2024-12-11 19:45:27] INFO: Macro engine started" />
                </ListBoxItem>
                <ListBoxItem Foreground="{StaticResource SuccessColor}" FontSize="11" FontFamily="Consolas">
                    <TextBlock Text="[2024-12-11 19:45:28] INFO: Ore detected: iron_ore (confidence: 0.92)" />
                </ListBoxItem>
                <ListBoxItem Foreground="{StaticResource SuccessColor}" FontSize="11" FontFamily="Consolas">
                    <TextBlock Text="[2024-12-11 19:45:29] INFO: Ore detected: gold_ore (confidence: 0.87)" />
                </ListBoxItem>
            </ListBox>
        </Border>
    </Grid>
</Page>
